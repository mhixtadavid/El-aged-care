                  <!-- Modal -->
                  <div class="modal fade" id="addContactModal" tabindex="-1" role="dialog" aria-labelledby="addContactModalTitle" aria-hidden="true">

                    <!-- ------------ Add clients ------------ -->

                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header d-flex align-items-center">
                          <h5 class="modal-title">Add Clients</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <div class="add-contact-box">
                            <div class="add-contact-content">
                              <form action="/clients/add" method="post" id="addContactModalTitle" enctype="multipart/form-data">
                                <div class="row">
                                  <div class="col-md-6">
                                    <div class="mb-3 contact-name">
                                      <input type="text" id="fname" class="form-control" placeholder="First Name" name="fname" />
                                      <span class="validation-text text-danger"></span>
                                    </div>
                                  </div>
                                  <div class="col-md-6">
                                    <div class="mb-3 contact-email">
                                      <input type="text" id="lname" class="form-control" placeholder="Last Name" name="lname" />
                                      <span class="validation-text text-danger"></span>
                                    </div>
                                  </div>
                                  <div class="col-md-6">
                                    <div class="mb-3 contact-email">
                                        <select class="form-select" name="gender" aria-label="Default select example">
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                            </select>
                                    </div>
                                  </div>
                                  <div class="col-md-6">
                                    <div class="mb-3 contact-email">
                                      <input type="date" id="age" class="form-control" placeholder="Age" name="age" />
                                      <span class="validation-text text-danger"></span>
                                    </div>
                                  </div>

                                  <div class="col-md-6">
                                    <div class="mb-3 contact-email">
                                      <input type="text" id="town" class="form-control" placeholder="Town" name="town" />
                                      <span class="validation-text text-danger"></span>
                                    </div>
                                  </div>

                                  <div class="col-md-6">
                                    <div class="mb-3 contact-email">
                                      <input type="text" id="state" class="form-control" placeholder="State" name="state" />
                                      <span class="validation-text text-danger"></span>
                                    </div>
                                  </div>

                                  <div class="col-md-6">
                                    <div class="mb-3 contact-email">
                                      <input type="number" id="pnumber" class="form-control" placeholder="Phone number" name="pnumber" />
                                      <span class="validation-text text-danger"></span>
                                    </div>
                                  </div>

                                  <div class="col-md-6">
                                    <div class="mb-3 contact-email">
                                      <input type="email" id="email" class="form-control" placeholder="Email" name="email" />
                                      <span class="validation-text text-danger"></span>
                                    </div>
                                  </div>
                                </div>
                               
                                <div class="row">
                                  <div class="col-md-12">
                                    <div class="mb-3 contact-location">
                                      <input type="text" id="address" class="form-control" placeholder="Address" name="address"/>
                                    </div>
                                  </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="mb-3 contact-location">
                                      <input type="text" id="comment" class="form-control" placeholder="Comment" name="comment" />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                  <button type="submit" id="btn-edit" class="btn btn-success rounded-pill px-4">Save</button>
                                  <button class="btn btn-danger rounded-pill px-4" data-bs-dismiss="modal"> Discard </button>
                                </div>
                              </form>
                            </div>                              
                            </div>
                         
